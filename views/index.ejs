<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style.css" type="text/css">
    <title>inventory</title>
</head>
<body>
<header>
    <%- include('./partials/nav'); %>
</header>
<main class="container">
    <h1>All items</h1>
    <ul class="grid">
        <% items.forEach(function(item){ %>
            <li>
                <form class="card">
                    <input type="hidden" name="item_id" value=<%= item._id %>/>
                    <h3 class="card-title"><%= item.item_name %></h3>
                    <div class="card-body-section">
                        <div>
                            <p class="card-section-title">Description</p>
                            <p class="card-description text-overflow-handle"><%= item.description %></p>
                        </div>
                        <% if (item.category){ %>
                            <div>
                                <p class="card-section-title">Category</p>
                                <p> <%= item.category.category_name %> </p>
                            </div>
                        <% } %>
                        <div>
                            <p class="card-section-title">Item price: </p>
                            <p><%= item.price %></p>
                        </div>
                        <div>
                            <p class="card-section-title">Item quantity: </p>
                            <p><%= item.quantity %></p>
                        </div>
                    </div>
                    <div>
                        <button type="submit" formmethod="get" formaction="/inventory/item/<%= item._id %>">view
                        </button>
                        <button type="submit" formmethod="get" formaction="/inventory/item/update/<%= item._id %>">
                            update
                        </button>
                        <button class="btn-delete" type="submit" formmethod="post"
                                formaction="/inventory/item/delete/<%= item._id %>">
                            delete
                        </button>
                    </div>
                </form>
            </li>
        <% }); %>
    </ul>
</main>
</body>
</html>